@model TicketFormViewModel
@{
    ViewData["Title"] = "Nouveau Ticket";
}
<form asp-action="Create" asp-controller="Ticket" method="post">
    <div class="for-group-inline">
        <div class="form-group col-6">
            <label>Type *</label>
            <select asp-for="TickeTypeId">
                @foreach(var priority in Model.Types )
                {
                    <option value="@priority.Key">@priority.Value</option>
                }
            </select>
        </div>
        <div class="form-group col-6">
            <label>Type *</label>
            <select asp-for="TicketPriorityId">
                @foreach(var priority in Model.Priorities )
                {
                    <option value="@priority.Key">@priority.Value</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label>Description</label>
        <p>Veuillez décrire au mieux le problème rencontré</p>
        <textarea class="form-control" asp-for="Description" id="Ticket-Form-Description"></textarea>
    </div>
    <div class="form-group">
        <label>Contexte *</label>
        <p>Veuillez décrire le contexte du problème</p>
        <p>Exemple : utilisateur connecté, chemin emprunté jusqu'à la page, contenu du formulaire,etc.</p>
        <textarea class="form-control" asp-for="Description" id="Ticket-Form-Description"></textarea>
    </div>
    <div class="form-group">
        <label>Documents</label>
        <p>Vous pouvez joindre des pièces complémentaire à votre demande</p>
        <p>Exemple : ScreenShots, vidéo, document words, pdf, etc.</p>
        <input asp-for="Documents" type="file" multiple>
    </div>
</form>
@section Scripts{
    <script>
        $(function() {
          $("#Ticket-Form-Description").wysibb();
        })
    </script>
}